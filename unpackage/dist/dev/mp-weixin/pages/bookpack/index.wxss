#bookShelf {
  width: 100%;
  height: 100%;
}
#bookShelf .topBar {
  width: 90%;
  height: 294rpx;
  background-color: #f8f9fb;
  margin-left: 5%;
  border-radius: 30rpx;
  margin-top: 40rpx;
  border: 2rpx solid #dee0e2;
}
#bookShelf .topBar .userName {
  position: relative;
  width: 90%;
  height: 50%;
  margin-left: 5%;
  border-bottom: 2rpx solid #dee0e2;
}
#bookShelf .topBar .userName image {
  position: absolute;
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  right: 2rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .userName ._span {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .bookActive {
  position: relative;
  width: 90%;
  height: 50%;
  margin-left: 5%;
}
#bookShelf .topBar .bookActive .text {
  position: absolute;
  font-size: 24rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .bookActive .text .second {
  color: #808080;
}
#bookShelf .bookCard {
  width: 90%;
  margin-left: 5%;
  margin-top: 34rpx;
  border-radius: 70rpx;
  outline: none;
  background-color: #5d5f66;
}
#bookShelf .bookCard button {
  border-radius: 70rpx;
  outline: none;
  background-color: #5d5f66;
}
#bookShelf .bookCard button ._span {
  color: #fff;
  font-size: 24rpx;
}
#bookShelf .bookCard button .right {
  color: #fff;
  font-size: 24rpx;
  margin-left: 230rpx;
}
#bookShelf .book {
  width: 90%;
  margin-left: 5%;
  padding-top: 70rpx;
}
#bookShelf .book .addBook {
  width: 188rpx;
  height: 272rpx;
  border: 2rpx solid #dee0e2;
}
#bookShelf .book .addBook .add {
  color: #5d5f66;
  text-align: center;
  vertical-align: middle;
  line-height: 272rpx;
}

