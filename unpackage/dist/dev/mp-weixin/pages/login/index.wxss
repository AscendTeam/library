#bookShelf {
  width: 100%;
  height: 100%;
}
#bookShelf .topBar {
  width: 90%;
  height: 147px;
  background-color: #f8f9fb;
  margin-left: 5%;
  border-radius: 15px;
  margin-top: 20px;
  border: 1px solid #dee0e2;
}
#bookShelf .topBar .userName {
  position: relative;
  width: 90%;
  height: 50%;
  margin-left: 5%;
  border-bottom: 1px solid #dee0e2;
}
#bookShelf .topBar .userName image {
  position: absolute;
  width: 43px;
  height: 43px;
  border-radius: 50%;
  right: 1px;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .userName ._span {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .bookActive {
  position: relative;
  width: 90%;
  height: 50%;
  margin-left: 5%;
}
#bookShelf .topBar .bookActive .text {
  position: absolute;
  font-size: 12px;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
#bookShelf .topBar .bookActive .text .second {
  color: #808080;
}
#bookShelf .bookCard {
  width: 90%;
  margin-left: 5%;
  margin-top: 17px;
  border-radius: 35px;
  outline: none;
  background-color: #5d5f66;
}
#bookShelf .bookCard button {
  border-radius: 35px;
  outline: none;
  background-color: #5d5f66;
}
#bookShelf .bookCard button ._span {
  color: #fff;
  font-size: 12px;
}
#bookShelf .bookCard button .right {
  color: #fff;
  font-size: 12px;
  margin-left: 115px;
}
#bookShelf .book {
  width: 90%;
  margin-left: 5%;
  padding-top: 35px;
}
#bookShelf .book .addBook {
  width: 94px;
  height: 136px;
  border: 1px solid #dee0e2;
}
#bookShelf .book .addBook .add {
  color: #5d5f66;
  text-align: center;
  vertical-align: middle;
  line-height: 136px;
}

