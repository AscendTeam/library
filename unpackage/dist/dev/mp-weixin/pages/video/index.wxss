.uni-padding-wrap {
  width: 100%;
}
.uni-padding-wrap .myVideo {
  width: 100%;
}
.videoTitle {
  font-size: 28rpx;
  display: block;
  width: 90%;
  margin: 10rpx auto;
}
.videoTitle .videoAll {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
  height: 50rpx;
  width: 90%;
  margin: 40rpx auto;
}
.videoTitle .videoAll .videoUserico {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  line-height: 50rpx;
}
.videoTitle .videoAll .videoUserico image {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}
.videoTitle .videoAll .videoUserico ._span {
  font-size: 26rpx;
  color: #555;
  padding-left: 10rpx;
  letter-spacing: 3rpx;
}
.videoTitle .videoAll .videoMation {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 100rpx;
}
.videoTitle .videoAll .videoMation .iconfont {
  font-size: 50rpx;
  padding: 0 5rpx;
}
.videoTitle .videoAll .videoMation ._span {
  font-size: 25rpx;
  color: #555;
}
.videoTitle .videoAll .videoShare {
  background: #007aff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  border-radius: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  position: absolute;
  right: 0;
}
.videoTitle .videoAll .videoShare .iconfont {
  padding-left: 20rpx;
  font-size: 38rpx;
}
.videoTitle .videoAll .videoShare ._span {
  padding-right: 20rpx;
  font-size: 25rpx;
  letter-spacing: 3rpx;
}

